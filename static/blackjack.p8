function _init()
  game_over=false
  win=false
  player_stands=false
  cls(3)
  make_deck()
  make_player()
  make_dealer()
end

function _update()
  if(not game_over) then
    process_buttons()
    update_player()
    update_dealer()
    if(player_stands) then
      finish_dealer()
      game_over = true
    end
  else
    if(btnp(âŽ)) _init()
  end
end

function _draw()
    draw_table()
    draw_player()
    draw_dealer() 

  if (game_over) then
    draw_table()
    draw_player()
    draw_dealer()
    end_game()
  else
    draw_info()
  end
end

function end_game()
  if(player.score >21 or (dealer.score <=21 and player.score < dealer.score)) then
    win=false
  else 
    win=true
  end

  if(win) then
    sfx(0)
    print("you win!",4,30,7)
  else
    sfx(1)
    print("you lose!",4,30,7)
  end
  print("your score: "..player.score,4,40,7)
  print("dealer's score: "..dealer.score,4,50,7)
  print("press âŽ to play again!",4,60,7)

end

